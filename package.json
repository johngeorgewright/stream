{
  "name": "@johngw/stream",
  "version": "1.5.0",
  "description": "Reactive programming tools using the WHATWG Streams API.",
  "keywords": [
    "stream",
    "streams",
    "whatwg streams",
    "stream api",
    "reactive"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "yarn rimraf dist && yarn tsc",
    "build:docs": "yarn build:docs:api && yarn build:docs:site",
    "build:docs:api": "typedoc",
    "build:docs:site": "bundle exec jekyll build --config jekyll.yml",
    "coverage": "open coverage/lcov-report/index.html",
    "serve:docs": "concurrently --names api,site 'yarn build:docs:api --preserveWatchOutput --watch' 'bundle exec jekyll serve --config jekyll.yml'",
    "start": "yarn tsc --watch --preserveWatchOutput",
    "test": "yarn test:lint && yarn test:unit",
    "test:lint": "eslint src",
    "test:unit": "jest --coverage"
  },
  "main": "dist/index.js",
  "packageManager": "yarn@3.4.1",
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@commitlint/types": "17.4.4",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.7",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/jest": "29.4.0",
    "@types/node": "18.15.0",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "concurrently": "7.6.0",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "eslint": "8.35.0",
    "husky": "8.0.3",
    "jest": "29.4.3",
    "jest-environment-jsdom": "29.4.3",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "rimraf": "4.1.2",
    "semantic-release": "20.1.1",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typedoc": "0.23.26",
    "typescript": "4.9.5",
    "web-streams-polyfill": "3.2.1"
  },
  "dependencies": {
    "assert-never": "1.2.1",
    "ts-toolbelt": "9.6.0",
    "tslib": "2.5.0"
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --ignore-path .gitignore --write"
    ]
  }
}
