{
  "name": "@johngw/stream-mono-repo",
  "version": "2.2.0",
  "description": "Reactive programming tools using the WHATWG Streams API.",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "stream",
    "streams",
    "whatwg streams",
    "stream api",
    "reactive"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --verbose --topological-dev --exclude @johngeorgewright/scaffold run build",
    "build:docs": "yarn build:docs:api && yarn build:docs:site",
    "build:docs:api": "typedoc",
    "build:docs:site": "bundle exec jekyll build --config jekyll.yml",
    "clean": "yarn workspaces foreach run clean",
    "package:generate": "node --require ts-node/register $(yarn bin yo) ./packages/scaffold/src/package-generate",
    "package:remove": "node --require ts-node/register $(yarn bin yo) ./packages/scaffold/src/package-remove",
    "prepare": "husky install",
    "release": "yarn workspaces foreach --verbose --no-private --topological-dev run sematnic-release",
    "serve:docs": "yarn build:docs:api && concurrently --names api,site 'yarn build:docs:api --preserveWatchOutput --watch' 'bundle exec jekyll serve --config jekyll.yml'",
    "start": "yarn build && yarn workspaces foreach --verbose --no-private --parallel --interlaced run start"
  },
  "main": "./dist/index.js",
  "exports": [
    "./dist/index.js",
    "./dist/jest/index.js"
  ],
  "packageManager": "yarn@3.5.0",
  "devDependencies": {
    "@commitlint/cli": "17.5.0",
    "@commitlint/config-conventional": "17.4.4",
    "@commitlint/types": "17.4.4",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.7",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/jest": "29.5.0",
    "@typescript-eslint/eslint-plugin": "5.56.0",
    "@typescript-eslint/parser": "5.56.0",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "eslint": "8.36.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.0",
    "prettier": "2.8.6",
    "semantic-release": "20.1.3",
    "semantic-release-monorepo": "7.0.5",
    "ts-node": "10.9.1",
    "typedoc": "0.23.28",
    "typescript": "5.0.2",
    "web-streams-polyfill": "3.2.1",
    "yo": "4.3.1"
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --ignore-path .gitignore --write"
    ]
  }
}
