{
  "name": "@johngw/stream",
  "version": "2.2.0",
  "type": "module",
  "description": "Reactive programming tools using the WHATWG Streams API.",
  "keywords": [
    "stream",
    "streams",
    "whatwg streams",
    "stream api",
    "reactive"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "yarn clean && tsc && tsc --project tsconfig.common.json",
    "build:docs": "yarn build:docs:api && yarn build:docs:site",
    "build:docs:api": "typedoc",
    "build:docs:site": "bundle exec jekyll build --config jekyll.yml",
    "clean": "rimraf dist",
    "coverage": "open coverage/lcov-report/index.html",
    "serve:docs": "yarn build:docs:api && concurrently --names api,site 'yarn build:docs:api --preserveWatchOutput --watch' 'bundle exec jekyll serve --config jekyll.yml'",
    "start": "concurrently --names es,common 'yarn tsc --watch --preserveWatchOutput' 'yarn tsc --watch --preserveWatchOutput --project tsconfig.common.json'",
    "test": "yarn test:lint && yarn test:unit",
    "test:lint": "eslint src",
    "test:unit": "jest",
    "test:coverage": "jest --coverage"
  },
  "main": "./dist/es/index.js",
  "exports": {
    ".": {
      "import": "./dist/es/index.js",
      "require": "./dist/common/index.js"
    }
  },
  "packageManager": "yarn@3.5.0",
  "devDependencies": {
    "@commitlint/cli": "17.5.0",
    "@commitlint/config-conventional": "17.4.4",
    "@commitlint/types": "17.4.4",
    "@johngw/stream-jest": "workspace:*",
    "@johngw/stream-test": "workspace:*",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.7",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/eslint": "^8",
    "@types/jest": "29.5.0",
    "concurrently": "7.6.0",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "eslint": "8.37.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "lint-staged": "13.2.0",
    "prettier": "2.8.6",
    "rimraf": "4.4.1",
    "semantic-release": "20.1.3",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typedoc": "0.23.28",
    "typescript": "5.0.2",
    "web-streams-polyfill": "3.2.1"
  },
  "dependencies": {
    "@johngw/stream-common": "workspace:*",
    "assert-never": "1.2.1",
    "ts-toolbelt": "9.6.0",
    "tslib": "2.5.0"
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --ignore-path .gitignore --write"
    ]
  }
}
