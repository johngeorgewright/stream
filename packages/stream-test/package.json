{
  "name": "@johngw/stream-test",
  "version": "0.0.0",
  "description": "Testing utilities for streams",
  "type": "module",
  "main": "./dist/es/index.js",
  "exports": {
    ".": {
      "import": "./dist/es/index.js",
      "require": "./dist/common/index.js"
    },
    "./polyfill": {
      "import": "./dist/es/polyfill.js",
      "require": "./dist/common/polyfill.js"
    }
  },
  "scripts": {
    "build": "yarn clean && tsc && tsc --project tsconfig.common.json",
    "clean": "rimraf dist",
    "start": "concurrently --names es,common 'yarn tsc --watch --preserveWatchOutput' 'yarn tsc --watch --preserveWatchOutput --project tsconfig.common.json'",
    "test": "jest --passWithNoTests"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johngeorgewright/stream/issues"
  },
  "homepage": "https://github.com/johngeorgewright/stream#readme",
  "devDependencies": {
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.7",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/jest": "29.5.0",
    "@types/js-yaml": "^4",
    "@types/node": "18.15.11",
    "concurrently": "8.0.1",
    "jest": "29.5.0",
    "rimraf": "4.4.1",
    "semantic-release": "21.0.0",
    "semantic-release-monorepo": "7.0.5",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "5.0.2"
  },
  "dependencies": {
    "@johngw/stream-common": "workspace:*",
    "js-yaml": "4.1.0",
    "tslib": "2.5.0",
    "web-streams-polyfill": "3.2.1"
  }
}
